<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net-net-1.0" />
  </configSections>
  
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <log4net>
    <root>
      <level value="ALL" />
      <appender-ref ref="textboxAppender" />
      <appender-ref ref="DailyAppender" />
    </root>
    <logger name="Daily.Logging">
      <level value="ALL" />
      <appender-ref ref="textboxAppender" />
    </logger>
    <logger name="MainLog">
      <level value="ALL" />
      <appender-ref ref="textboxAppender" />
      <appender-ref ref="DailyAppender" />
    </logger>
    <appender name="DailyAppender" type="log4net.Appender.RollingFileAppender,log4net">
      <param name="File" value="../log/" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd.'txt'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d[%p]%n%f%l%n%m%n%n" />
      </layout>
    </appender>
    <appender name="textboxAppender" type="Test.TextBoxAppender">
      <FormName value="TestForm" />
      <TextBoxName value="richTextBoxLog" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [ %level ]：  %m%n" />
      </layout>
    </appender>
  </log4net>
</configuration>